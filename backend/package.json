{
  "name": "c3-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "env -u CLAUDECODE -u CLAUDE_CODE_ENTRYPOINT tsx watch src/hub-entry.ts",
    "build": "tsc",
    "start": "node dist/hub-entry.js",
    "start:worker": "node dist/worker-entry.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:system": "vitest run --config vitest.system.config.ts",
    "lint": "eslint src/ tests/",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "chokidar": "^4.0.0",
    "diff2html": "^3.4.0",
    "express": "^4.21.0",
    "node-pty": "^1.0.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "ssh2": "^1.16.0",
    "uuid": "^11.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/ssh2": "^1.15.0",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.0",
    "@vitest/coverage-v8": "^2.1.9",
    "supertest": "^7.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  }
}
